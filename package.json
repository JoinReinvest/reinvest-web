    "autoprefixer": "10.4.12",
    "classnames": "^2.3.2",
    "cssnano": "^5.1.13",
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.8.4",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.3",
    "@hookooekoo/ui-button": "^0.0.8",
